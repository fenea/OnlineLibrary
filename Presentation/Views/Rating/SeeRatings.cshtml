
<section id="happyClient">

      <div class="container" style="padding:50px;">
            <h2 class="sectionHeading">
                <span class="subHeading">Review </span>
                What people say
            </h2>
     <img style="height:15%;width: 20%;max-width:20%; display: block;margin-left: auto;margin-right: auto" src= "@Model.Book.PhotoPath">
     <div class="info" style=" text-align: center; ">
                                <h4 class="name">@Model.Book.Name</h4>
                                <span class="regency">by @Model.Book.Author / @Model.Book.Type</span>
                                <p class="desc" style="margin-left:15% margin-right:15%;">
                                    @Model.Book.Description
            </p>
                            </div>

        <p>@Model.NrOfGradesFiveProcent</p>
         <div class="container" style="margin-left: 25%;">
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="well well-sm" >
                <div class="row"  >
                    <div class="col-xs-12 col-md-6 text-center" >
                        <h1 class="rating-num">
                            @Model.Book.Score/5</h1>
                        <div class="rating">
                              @for (var i=Model.Book.Score; i<5;i++)
                        {
                             <span class="glyphicon glyphicon-star-empty"></span>

                        }

                        @for (var i=0;i<Model.Book.Score;i++)
                        {
                             <span class="glyphicon glyphicon-star"></span>
                        }
                        </div>
                        <div>
                            <span class="glyphicon glyphicon-user"></span> @Model.Rating.Count total
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="row rating-desc">
                            <div class="col-xs-3 col-md-3 text-right">
                                <span class="glyphicon glyphicon-star"></span>5
                            </div>
                            <div class="col-xs-8 col-md-9">
                                <div class="progress progress-striped">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="20%">
                                        <span class="sr-only">@Model.NrOfGradesFiveProcent</span>
                                    </div>
                                </div>
                            </div>
                            <!-- end 5 -->
                            <div class="col-xs-3 col-md-3 text-right">
                                <span class="glyphicon glyphicon-star"></span>4
                            </div>
                            <div class="col-xs-8 col-md-9">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                                        <span class="sr-only">@Model.NrOfGradesFourProcent %</span>
                                    </div>
                                </div>
                            </div>
                            <!-- end 4 -->
                            <div class="col-xs-3 col-md-3 text-right">
                                <span class="glyphicon glyphicon-star"></span>3
                            </div>
                            <div class="col-xs-8 col-md-9">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                        <span class="sr-only">@Model.NrOfGradesThreeProcent %</span>
                                    </div>
                                </div>
                            </div>
                            <!-- end 3 -->
                            <div class="col-xs-3 col-md-3 text-right">
                                <span class="glyphicon glyphicon-star"></span>2
                            </div>
                            <div class="col-xs-8 col-md-9">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="20"
                                        aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                                        <span class="sr-only">@Model.NrOfGradesTwoProcent %</span>
                                    </div>
                                </div>
                            </div>
                            <!-- end 2 -->
                            <div class="col-xs-3 col-md-3 text-right">
                                <span class="glyphicon glyphicon-star"></span>1
                            </div>
                            <div class="col-xs-8 col-md-9">
                                <div class="progress">
                                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80"
                                        aria-valuemin="0" aria-valuemax="100" style="width: 15%">
                                        <span class="sr-only">@Model.NrOfGradesOneProcent %</span>
                                    </div>
                                </div>
                            </div>
                            <!-- end 1 -->
                        </div>
                        <!-- end row -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



   


    

@{
    int counter=0;

    foreach(var r in Model.Rating)
    {
        if (counter%2==0)
        {
             @:<div class="row"> 
        }

         <div class="col-md-6">
                        <div layout="row" class="item">
                            <div class="avatar fsr">
                                <img class="img-circle" src="../images/profile_pic/1.png" alt="">
                            </div>
                            <div class="info">
                                <h4 class="name">@Model.User[counter].UserName</h4>
                                <span class="regency">

                        @for (int i = 0; i < 3; i++)
                        { 
                             <span class="glyphicon glyphicon-star"></span>
                        }
                        @for (int i = 3; i < 5; i++ )
                        { 
                             <span class="glyphicon glyphicon-star-empty"></span>
                        }
                                                
                                </span>
                                <p class="desc">
                                            @r.Review
                                 </p>
                            </div>
                        </div>
                    </div>

            if(counter%2==1)
        {
             @:</div>
        }
        counter++;
    }

    }
     </div>
        </div>
    </section><!--/#happyClient-->
  </section>
