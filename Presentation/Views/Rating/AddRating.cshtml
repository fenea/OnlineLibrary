@model RatingModel
@{
    ViewData["Title"] = "Add Rating";
}
       

<main role="main" class="inner cover">
    <div class="container">
        <form method="post" class="form-signin">
            <div asp-validation-summary="ModelOnly"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group1">
                <label asp-for="Review" class="control-label" ></label>
                <input asp-for="Review" class="form-control" placeholder="Review"  />
                <span  asp-validation-for="Review" class="text-danger"></span>
            </div>

            <div class="form-group2">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade"  class="form-control" placeholder="Grade"  />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="AddRating" class="btn btn-lg btn-primary btn-block" />
            </div>
           

          
        </form>
    </div>
</main>



 