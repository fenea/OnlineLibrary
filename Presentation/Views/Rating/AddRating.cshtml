@model RatingModel
@{
    ViewData["Title"] = "Add Rating";
 }

<section id="books">
    <div class="container">
        <h2 class="sectionHeading">
            <span class="subHeading">Review</span>
            Please add a review
        </h2>
        
<div class="row" style="margin-left:40%;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           <div class="form-group1" style="margin-bottom:-5px;">
                <label asp-for="Review" class="control-label" style=" visibility: hidden !important" ></label>
                <input asp-for="Review" class="form-control" placeholder="Review"  />
                <span  asp-validation-for="Review" class="text-danger"></span>
            </div>

            <div class="form-group2" style="margin-bottom:-5px;">
                <label asp-for="Grade" class="control-label" style=" visibility: hidden !important" ></label>
                <input asp-for="Grade"  class="form-control" placeholder="Grade"  />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top:20px;">
                <input type="submit" value="Add Rating" class="btn btn-lg btn-primary btn-block" style="background-color:rgba(206, 193, 193, 0.856"  />
            </div>
        </form>
    </div>
</div>
</div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
