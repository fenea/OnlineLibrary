@{


    string pageName = ViewContext.RouteData.Values["controller"].ToString();
    string action = ViewContext.RouteData.Values["action"].ToString();

     if(pageName.Equals("Rating"))
         {
                if(action.Equals("SeeRatings"))
                 {
                    Layout = "Review";
                 }

                 else

                 if(action.Equals("AddRating"))
                 {
                    Layout = "Review";
                 }
                 else
                 {
                     Layout = "_Layout";

                 }
          }
   else

       if(pageName.Equals("Account"))
    {
        if(action.Equals("Login"))
             {
                Layout = "Signin";
             }

         if(action.Equals("Register"))
             {
                Layout = "Reg";
             }
         if(action.Equals("SeeAddedBooks"))
             {
                Layout = "_Layout";

             }
    }
    else

     if(pageName.Equals("Books"))
         {
                if(action.Equals("AddBook"))
                 {
                    Layout = "Review";
                 }
                 else
                 {
                     Layout = "_Layout";

                 }
          }
     else
     {
          Layout = "_Layout";

     }
}

