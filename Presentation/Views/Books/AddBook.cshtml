@model Domain.Entities.Book

<section id="books">
    <div class="container">
        <h2 class="sectionHeading">
            <span class="subHeading">Book</span>
            Please add a book
        </h2>

        <div class="row" style="margin-left:25%;">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" style="margin-bottom:-5px;">
                        <label asp-for="Name" class="control-label" style=" visibility: hidden !important"></label>
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom:-5px;">
                        <label asp-for="Type" class="control-label" style=" visibility: hidden !important"></label>
                        <input asp-for="Type" class="form-control" placeholder="Type" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom:10px;">
                        <label asp-for="Author" class="control-label" style=" visibility: hidden !important"></label>
                        <input asp-for="Author" class="form-control" placeholder="Author" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom:10px;">
                        <label asp-for="Path" class="control-label" style="margin-left: 2% ">Upload Book</label>
                        <input asp-for="Path" class="form-control" type="file" placeholder="Path" />
                        <span asp-validation-for="Path" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom:-5px;">
                        <label asp-for="PhotoPath" class="control-label" style="margin-left: 2% ">Upload Book Cover</label>
                        <input asp-for="PhotoPath" class="form-control" type="file" placeholder="PhotoPath" id="photoUpload" />
                        <span asp-validation-for="PhotoPath" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-bottom:-5px;">
                        <label asp-for="Description" class="control-label" style=" visibility: hidden !important"></label>
                        <input asp-for="Description" class="form-control" placeholder="Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="margin-top:20px;">
                        <input type="submit" value="Add Book" class="btn btn-lg btn-primary btn-block" style="background-color:rgba(206, 193, 193, 0.856" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
