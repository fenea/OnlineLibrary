@model CreateBookModel

<h2 style="position: relative; margin-left:25%; font-family: sans-serif" class="col-md-8">Add book</h2>
<hr />
  <div class="row" style="margin-left:25%;">
    <div class="col-md-8" >
        <form method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type"  class="form-control"  placeholder="Type" name="sometext" style=" height: 34px;" autofocus="autofocus">
                    <option>drama</option>
                    <option>thriller</option>
                    <option>action</option>
                    <option>romance</option>
                 
                </select>
              
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Author"/>
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group"  style="margin-bottom:10px;">
                <label asp-for="BookFile" class="control-label">Upload Book</label>        
                <input asp-for="BookFile" class="form-control" type="file" placeholder="Path" style="display: inline; opacity: 1; font-size: small; position: relative "/>
       
               <span asp-validation-for="BookFile" class="text-danger"></span>
            </div>
            
            <div class="form-group"  style="margin-bottom: -5px;">
                <label asp-for="PhotoPath" class="control-label" >
                    Upload Book Cover
                </label>
                <input asp-for="PhotoPath" class="form-control" type="file" placeholder="PhotoPath" style="display: inline; opacity: 1; font-size: small; position: relative " />
                <span asp-validation-for="PhotoPath" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top:20px;">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" placeholder="Description"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group" class="col-md-8">
                <input type="submit" value="Create" class="btn btn-default"style="color:#999; border-color: #999"  />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
