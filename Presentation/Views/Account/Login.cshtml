@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
        
<main role="main" class="inner cover">
    <div class="container">         <form method="post" class="form-signin">             <div asp-validation-summary="ModelOnly"></div>             <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
             <h2 class="form-signin-heading">Please sign in</h2> 
            <div class="form-group1">                 <label asp-for="Username" class="control-label" ></label>                 <input asp-for="Username" class="form-control" placeholder="Username"  />                 <span  asp-validation-for="Username" class="text-danger"></span>             </div>              <div class="form-group2">                 <label asp-for="Password" class="control-label"></label>                 <input asp-for="Password" type="password" class="form-control" placeholder="Password"  />                 <span asp-validation-for="Password" class="text-danger"></span>             </div>               <div class="form-group">                 <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block" />             </div>

             <p class="form-signin-heading2">You don't have an account?
                  <a href="@Url.Action("Register", "Account")" >Register</a>
              </p>

          </form>     </div> </main>  

 