@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<main role="main" class="inner cover">
    <div class="container">
        <form method="post" class="form-signin"  enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <h2 class="form-signin-heading">Please register </h2>


             <div class="form-group1">
                <label asp-for="Username" class="control-label" ></label>
                <input asp-for="Username" class="form-control" placeholder="Username"  />
                <span  asp-validation-for="Username" class="text-danger"></span>
            </div>

            
            <div class="form-group2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password"  />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" placeholder="Image"   type="file"  style="display: inline; opacity: 1; font-size: small; position: relative "/>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Signup" class="btn btn-lg btn-primary btn-block" />
            </div>


         


        </form>
    </div>
</main>

